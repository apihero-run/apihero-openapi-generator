{
  "compilerOptions": {
    "target": "ES2015",
    "preserveConstEnums": true,
    "outDir": "./lib",
    "declaration": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
